<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		http://www.springframework.org/schema/util
 		http://www.springframework.org/schema/util/spring-util-3.2.xsd">
    
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:red.properties</value>
                <value>classpath:green.properties</value>
                <value>classpath:blue.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true" />
    </bean>
    
    <util:list id="redVipSeats">
        <value>1</value>
        <value>2</value>
        <value>3</value>
    </util:list>
    
    <bean id="redAuditorium" 
          class="com.epam.training.movie.theater.domain.Auditorium" >
        <constructor-arg>
            <value>${red.name}</value>
            <value>${red.seats}</value>
            <value>redVipSeats</value>
        </constructor-arg>
    </bean>


    <util:list id="greenVipSeats">
        <value>7</value>
        <value>8</value>
        <value>9</value>
    </util:list>
    
    <bean id="greenAuditorium" 
          class="com.epam.training.movie.theater.domain.Auditorium" >
        <constructor-arg>
            <value>${green.name}</value>
            <value>${green.seats}</value>
            <value>greenVipSeats</value>
        </constructor-arg>
    </bean>



    <util:list id="blueVipSeats">
        <value>17</value>
        <value>18</value>
        <value>19</value>
    </util:list>
    
    <bean id="blueAuditorium" 
          class="com.epam.training.movie.theater.domain.Auditorium" >
        <constructor-arg>
            <value>${blue.name}</value>
            <value>${blue.seats}</value>
            <value>blueVipSeats</value>
        </constructor-arg>
    </bean>


    <bean id="auditoriumService" 
          class="com.epam.training.movie.theater.service.auditorium.AuditoriumService" 
          depends-on="redAuditorium tenthTicketDiscountStrategy">
        <constructor-arg>
            <list>
                <ref bean="redAuditorium"/>
                <ref bean="greenAuditorium"/>
                <ref bean="blueAuditorium"/>
            </list>
        </constructor-arg>
    </bean>
    
</beans>